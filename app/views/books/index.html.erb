<body>
    <h1>Books</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th cosplan=3></th>
            </tr>
        </thead>
        <!--Bookのタイトル、説明とShow、Edit、Destroyのリンクのeach文-->
        <tbody>
            <tr>
                <% @book.each do |book| %>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Show", book_path(book.id) %></td>
                    <td><%= link_to "Edit", edit_book(book.id) %></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
                <% end %>
            </tr>
        </tbody>
    </table>
    <!--以下新規投稿フォーム作成予定-->
</body>